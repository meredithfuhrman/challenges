<h1>All Questions</h1>

<% if !@questions.empty? %>
  <table>
    <tr>
      <th>Title</th>
      <th>Created</th>
      <th></th>
    </tr>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question_answers_path(question) %></td>
        <td><%= question.created_at %></td>
      </tr>
    <% end %>
  </table>
<% end %>


<% if user_signed_in? %>
  <%= button_to "Post a Question", {:controller => :questions,
      :action => 'new'}, :method => :get %>
<% end %>
